#!/usr/bin/env bash

#
# genhosts - generate hosts file form /etc/hosts.d/*.conf
# 
# repository: https://github.com/kohkimakimoto/genhosts
#

OUTPUT=/etc/hosts

echo "# This hosts file was automatically generated by genhosts." > $OUTPUT
echo "# Don't modify this file manually." >> $OUTPUT
echo "" >> $OUTPUT

for file in /etc/hosts.d/*.conf
do

    echo "# Generated from $file" >> $OUTPUT
    cat $file >> $OUTPUT
    echo >> $OUTPUT

done

